<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userAccount">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/top_background"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-5dp" />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="235dp"
        android:layout_height="56dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/oswald"
        android:text="@string/count_of_book_donations"
        android:textColor="@color/white"
        android:textSize="@dimen/titletextt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView53"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/oswald"
        android:text="@string/_5"
        android:textColor="@color/white"
        android:textSize="@dimen/subtitlefont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="350dp"
        android:layout_height="288dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        tools:layout_editor_absoluteX="28dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="280dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/btn2"
            android:drawableStart="@drawable/ic_baseline_card_giftcard_24"
            android:paddingStart="5sp"
            android:paddingTop="8sp"
            android:text="@string/add_a_book"
            android:textAlignment="center"
            android:textColor="@color/fontBlue1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="281dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/btn2"
            android:drawableStart="@drawable/ic_baseline_attach_money_24"
            android:paddingStart="5sp"
            android:paddingTop="5sp"
            android:text="@string/donate_money"
            android:textAlignment="center"
            android:textColor="@color/fontBlue1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="281dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/btn2"
            android:drawableStart="@drawable/ic_baseline_account_box_24"
            android:paddingStart="5sp"
            android:paddingTop="5sp"
            android:text="@string/update_profile"
            android:textAlignment="center"
            android:textColor="@color/fontBlue1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView52"
            android:layout_width="281dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="16sp"
            android:background="@drawable/btn2"
            android:drawableStart="@drawable/ic_baseline_assignment_return_24"
            android:paddingStart="5sp"
            android:paddingTop="8sp"
            android:text="@string/signout"
            android:textAlignment="center"
            android:textColor="@color/fontBlue1"
            android:textSize="24sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald"
        android:text="@string/hi_dean"
        android:textColor="@color/pgrey"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="13dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="88dp"
        android:layout_height="57dp"
        app:srcCompat="@drawable/ic_undraw_male_avatar_g98d"
        tools:layout_editor_absoluteX="277dp"
        tools:layout_editor_absoluteY="29dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="213dp"
        android:layout_height="214dp"
        app:srcCompat="@drawable/ic_undraw_takeout_boxes_ap54"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="141dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners"
        app:itemIconTint="#ffff"
        app:itemTextColor="#ffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu" />

</androidx.constraintlayout.widget.ConstraintLayout>