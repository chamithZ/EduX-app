<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonateBook">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="@dimen/vector_width"
        android:layout_height="@dimen/vector_height"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/top_background" />

    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="@dimen/background_height"
        android:layout_height="@dimen/background_height"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_left_24"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="-4dp" />

    <TextView
        android:id="@+id/AddClassesH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald"
        android:text="Update classes"
        android:textColor="#FEFEFE"
        android:textSize="45sp"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="69dp" />

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="339dp"
        android:layout_height="341dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="321dp">

        <EditText
            android:id="@+id/editTextTextPersonName12"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/all_rounded_corner"
            android:backgroundTint="59FFFBFB"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter Grade"
            android:inputType="textPersonName"
            android:paddingStart="10sp"
            android:paddingBottom="15sp"
            android:textAlignment="viewStart" />

        <EditText
            android:id="@+id/editTextTextPersonName14"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/all_rounded_corner"
            android:backgroundTint="59FFFBFB"
            android:ems="10"
            android:gravity="center"
            android:hint="Add Zoom Link"
            android:inputType="textPersonName"
            android:paddingStart="10sp"
            android:paddingBottom="15sp"
            android:textAlignment="viewStart" />

        <EditText
            android:id="@+id/editTextTextPersonName15"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/all_rounded_corner"
            android:backgroundTint="59FFFBFB"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter Subject"
            android:inputType="textPersonName"
            android:paddingStart="10sp"
            android:paddingBottom="15sp"
            android:textAlignment="viewStart" />

        <EditText
            android:id="@+id/editTextTextPersonName13"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/all_rounded_corner"
            android:backgroundTint="59FFFBFB"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter date"
            android:inputType="textPersonName"
            android:paddingStart="10sp"
            android:textAlignment="viewStart" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/all_rounded_corner"
            android:backgroundTint="59FFFBFB"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter Time"
            android:inputType="textPersonName"
            android:paddingStart="10sp"
            android:textAlignment="viewStart" />

    </LinearLayout>

    <Button
        android:id="@+id/submitDonate"
        android:layout_width="@dimen/btn2"
        android:layout_height="@dimen/btn_height"
        android:background="@drawable/btn1"
        android:text="Update"
        android:textColor="#FEFEFE"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="662dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners"
        app:itemIconTint="#ffff"
        app:itemTextColor="#ffff"
        app:menu="@menu/menu"
        tools:layout_editor_absoluteY="729dp" />

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="164dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_digital_presentation_amico"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="156dp" />


</androidx.constraintlayout.widget.ConstraintLayout>