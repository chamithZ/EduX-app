<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="286dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_background" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="@string/add_a_comment"
        android:textColor="@color/pgrey"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView23"
        tools:layout_editor_absoluteX="103dp" />

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="340dp"
        android:layout_height="363dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.89">

        <EditText
            android:id="@+id/name"
            android:layout_width="235dp"
            android:layout_height="45dp"
            android:layout_marginLeft="75sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="75sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/text_veiw_edit"
            android:backgroundTint="#C4E0E0E0"
            android:drawableStart="@drawable/ic_baseline_account_box_24"
            android:ems="10"
            android:hint="@string/name"
            android:inputType="textPersonName"
            android:paddingLeft="10sp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="237dp"
            android:layout_height="42dp"
            android:layout_marginLeft="75sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="75sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/btn2"
            android:backgroundTint="#C4E0E0E0"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:ems="10"
            android:hint="@string/emailAdress"
            android:inputType="textEmailAddress"
            android:paddingLeft="10sp" />

        <EditText
            android:id="@+id/editTextNumberSigned"
            android:layout_width="234dp"
            android:layout_height="57dp"
            android:layout_marginLeft="75sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="75sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/btn2"
            android:backgroundTint="#C4E0E0E0"
            android:drawableStart="@drawable/ic_baseline_article_24"
            android:ems="10"
            android:hint="@string/leave_comment_here"
            android:inputType="numberSigned|number"
            android:paddingLeft="10sp" />

        <Button
            android:id="@+id/login3"
            android:layout_width="202dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="75sp"
            android:background="@drawable/btn1"
            android:gravity="center"
            android:text="@string/add_comment"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/pgrey"
            android:textSize="20sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="162dp"
        android:layout_height="161dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout10"
        app:srcCompat="@drawable/ic_undraw_wall_post_re_y78d"
        tools:layout_editor_absoluteX="103dp" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="58dp"
        android:layout_height="52dp"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_left_24"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="49dp" />

</androidx.constraintlayout.widget.ConstraintLayout>