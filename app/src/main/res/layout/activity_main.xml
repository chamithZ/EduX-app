<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_background" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView14"
        app:layout_constraintStart_toEndOf="@+id/projectname"
        app:srcCompat="@mipmap/logo"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/projectname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="154dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="EduX"
        android:textColor="#04084C"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
        app:layout_constraintEnd_toEndOf="@+id/imageView14"
        app:layout_constraintTop_toTopOf="@+id/imageView14"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="394dp"
        android:layout_height="723dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="62dp">

        <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:text="@string/are_you_a_student_seeking_knowledge"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="204dp"
            android:layout_height="143dp"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/ic_undraw_road_to_knowledge_m8s0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="0sp"
            android:layout_marginBottom="5dp"
            android:text="@string/are_you_a_teacher_who_likes_to_volunteer"
            android:textAlignment="center"
            android:textColor="#30298F"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="273dp"
            android:layout_height="183dp"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="1sp"
            android:layout_marginBottom="4dp"
            app:srcCompat="@drawable/ic_undraw_teaching_re_g7e3" />

        <Button
            android:id="@+id/sign"
            android:layout_width="202dp"
            android:layout_height="57dp"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="2sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn2"
            android:text="@string/sign_in"
            android:textColor="@color/fontBlue1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/login"
            android:layout_width="202dp"
            android:layout_height="57dp"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="4sp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/btn1"
            android:text="@string/log_in"
            android:textAlignment="center"
            android:textColor="@color/pgrey"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>