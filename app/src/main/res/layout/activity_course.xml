<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Course">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="406dp"
        android:layout_height="255dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <LinearLayout
            android:layout_width="336dp"
            android:layout_height="121dp"
            android:layout_marginLeft="30sp"
            android:background="@drawable/all_rounded_corner"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subject2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingLeft="15sp"
                    android:text="@string/maths"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginLeft="120sp"
                    android:layout_marginTop="10sp"
                    android:text="@string/teach_by_anjana_sir"
                    android:textColor="@color/fontBlue1"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="92dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="130sp"
                    android:background="@drawable/btn1"
                    android:text="Overview"
                    android:textAllCaps="false"
                    android:textColor="@color/pgrey" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="92dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10sp"
                    android:background="@drawable/btn2"
                    android:text="Unenroll"
                    android:textAllCaps="false"
                    android:textColor="@color/fontBlue1" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="336dp"
            android:layout_height="121dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="15sp"
            android:background="@drawable/all_rounded_corner"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subject2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingLeft="15sp"
                    android:text="English"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginLeft="110sp"
                    android:layout_marginTop="10sp"
                    android:text="@string/teach_by_shehan_sir"
                    android:textColor="@color/fontBlue1"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="92dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="130sp"
                    android:background="@drawable/btn1"
                    android:text="Overview"
                    android:textAllCaps="false"
                    android:textColor="@color/pgrey" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="92dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10sp"
                    android:background="@drawable/btn2"
                    android:text="Unenroll"
                    android:textAllCaps="false"
                    android:textColor="@color/fontBlue1" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_background" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald"
        android:text="Courses"
        android:textColor="@color/pgrey"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="35dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="178dp"
        android:layout_height="39dp"
        android:background="@drawable/btn3"
        android:text="Add Course"
        android:textAllCaps="false"
        android:textColor="@color/pgrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.184"
        tools:layout_editor_absoluteX="117dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="234dp"
        android:layout_height="165dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:srcCompat="@drawable/ic_digital_presentation_amico"
        tools:layout_editor_absoluteX="73dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners"
        app:itemIconTint="#ffff"
        app:itemTextColor="#ffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu" />

</androidx.constraintlayout.widget.ConstraintLayout>