<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/colo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Course">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="406dp"
        android:layout_height="255dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="339dp">

        <LinearLayout
            android:layout_width="336dp"
            android:layout_height="121dp"
            android:layout_marginLeft="30sp"
            android:background="@drawable/all_rounded_corner"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subject2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingLeft="15sp"
                    android:text="Grade 10"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="92dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="15sp"
                    android:background="@drawable/btn3"
                    android:text="Overview"
                    android:textAllCaps="false"
                    android:textColor="@color/pgrey" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="92dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10sp"
                    android:background="@drawable/btn1"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textColor="@color/pgrey" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="92dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10sp"
                    android:background="@drawable/btn2"
                    android:text="Remove"
                    android:textAllCaps="false"
                    android:textColor="@color/fontBlue1" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="336dp"
            android:layout_height="121dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="15sp"
            android:background="@drawable/all_rounded_corner"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subject2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingLeft="15sp"
                    android:text="Grade 11"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="92dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="15sp"
                    android:background="@drawable/btn3"
                    android:text="Overview"
                    android:textAllCaps="false"
                    android:textColor="@color/pgrey" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="92dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10sp"
                    android:background="@drawable/btn1"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textColor="@color/pgrey" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="92dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10sp"
                    android:background="@drawable/btn2"
                    android:text="Remove"
                    android:textAllCaps="false"
                    android:textColor="@color/fontBlue1" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/top_background" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald"
        android:shadowColor="#2BABE4"
        android:text="Your Classes"
        android:textColor="@color/pgrey"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="35dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="175dp"
        android:layout_height="51dp"
        android:background="@drawable/btn3"
        android:text="Add Class"
        android:textAllCaps="false"
        android:textColor="@color/pgrey"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="620dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="234dp"
        android:layout_height="165dp"
        app:srcCompat="@drawable/ic_digital_presentation_amico"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="149dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners"
        app:itemIconTint="#ffff"
        app:itemTextColor="#ffff"
        app:menu="@menu/menu"
        tools:layout_editor_absoluteY="729dp" />

</androidx.constraintlayout.widget.ConstraintLayout>