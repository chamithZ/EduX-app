<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentProgress">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_background" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="211dp"
        android:background="@drawable/all_rounded_corner"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="332dp">

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="67dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/level"
                android:layout_width="169dp"
                android:layout_height="35dp"
                android:paddingLeft="20sp"
                android:paddingTop="10sp"
                android:text="@string/student_count"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/levelType"
                android:layout_width="169dp"
                android:layout_height="35dp"
                android:paddingTop="10sp"
                android:text="10"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/level3"
                android:layout_width="169dp"
                android:layout_height="35dp"
                android:paddingLeft="20sp"
                android:paddingTop="10sp"
                android:text="@string/class_count"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/level4"
                android:layout_width="169dp"
                android:layout_height="35dp"
                android:paddingTop="10sp"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/level2"
                android:layout_width="169dp"
                android:layout_height="35dp"
                android:paddingLeft="20sp"
                android:paddingTop="10sp"
                android:text="Quiz count :"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/levelType2"
                android:layout_width="169dp"
                android:layout_height="35dp"
                android:paddingTop="10sp"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald"
        android:text="@string/your_progress"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="39dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/fontBlue1"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="584dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners"
        app:itemIconTint="#ffff"
        app:itemTextColor="#ffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="187dp"
        android:layout_height="207dp"
        app:srcCompat="@drawable/ic_undraw_percentages_re_a1ao"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="109dp" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="43dp"
        android:layout_height="43dp"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_left_24"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="39dp" />

</androidx.constraintlayout.widget.ConstraintLayout>